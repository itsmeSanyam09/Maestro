generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String  @id @default(cuid())
  clerkUserId String? @unique
  name        String
  phNumber    String?
  email       String? @unique
  posts       Post[]
}

model Post {
  id          String   @id @default(cuid())
  description String?
  address     String
  longitude   Float
  latitude    Float
  images      String[]
  dimension   String[]
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
}
